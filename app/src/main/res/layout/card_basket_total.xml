<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/default_card_item"
    android:layout_above="@+id/footer_button_checkout"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:id="@+id/layout_total_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/delivery_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_delivery_time"
                style="@style/basket_item_text_view"
                android:textAlignment="center"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_total_price_title"
                style="@style/basket_item_text_view"
                android:textAlignment="center"
                android:paddingBottom="0dp"
                android:text="@string/total_price"/>
            <TextView
                android:id="@+id/tv_total_price_value"
                style="@style/basket_item_text_view"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
