<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/review_card_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="24dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/sym_def_app_icon" />
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/review_card_user_name"
            style="@style/results_text_view_primary"
            android:text="Harry Potter"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/review_card_image"/>
        <TextView
            android:id="@+id/review_card_item_name"
            style="@style/results_text_view_secondary"
            android:text="Magic Cupcakes"
            android:layout_below="@id/review_card_user_name"
            android:layout_toEndOf="@id/review_card_image"/>

        <LinearLayout
            android:id="@+id/review_stars_layout"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
            <ImageView
                    android:id="@+id/review_star_1"
                    android:src="@drawable/ic_star"
                    android:tint="@color/star_grey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/review_star_2"
                    android:src="@drawable/ic_star"
                    android:tint="@color/star_grey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/review_star_3"
                    android:src="@drawable/ic_star"
                    android:tint="@color/star_grey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/review_star_4"
                    android:src="@drawable/ic_star"
                    android:tint="@color/star_grey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/review_star_5"
                    android:src="@drawable/ic_star"
                    android:tint="@color/star_grey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

        <TextView
            android:id="@+id/review_card_text"
            android:padding="8dp"
            style="@style/results_text_view_primary"
            android:layout_below="@+id/review_card_image"
            android:layout_alignParentStart="true"
            android:text="Ooo, this dish was really tasty.\nLots more sample text.\nPretend that this is a useful review. Thanks!\nWill definitely be buying again!"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>