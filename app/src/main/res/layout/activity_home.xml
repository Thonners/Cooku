<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_brownie_1"
    tools:context="com.thonners.kooku.HomeActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="@string/app_name"
        android:textSize="@dimen/home_logo_text"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.CardView
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:onClick="getStartedClicked"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        android:minHeight="@dimen/start_button_v_size"
        android:minWidth="0dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/get_started"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/start_text_size" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
