<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_award_card"
    android:layout_width="@dimen/item_awards_height"
    android:layout_height="@dimen/item_awards_height"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/item_awards_radius">

    <ImageView
        android:id="@+id/item_award_image_view"
    android:layout_width="@dimen/item_awards_height"
    android:layout_height="@dimen/item_awards_height"
        android:scaleType="fitCenter"
        android:tint="@android:color/white"/>

</android.support.v7.widget.CardView>