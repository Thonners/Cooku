<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    style="@style/footer_button"
    cardview:cardBackgroundColor="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/basket_text"
            style="@style/footer_button_text"
            android:layout_alignParentStart="true"
            android:text="@string/basket_text"/>

        <TextView
            android:id="@+id/basket_value"
            style="@style/footer_button_text"
            android:layout_toLeftOf="@+id/basket_icon"/>

        <ImageView
            android:id="@+id/basket_icon"
            android:layout_height="@dimen/footer_button_icon_size"
            android:layout_width="@dimen/footer_button_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/footer_button_padding"
            android:tint="@android:color/white"
            android:src="@drawable/ic_trolley"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>