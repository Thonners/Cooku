<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.thonners.kooku.OrderTrackingActivity"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/order_tracking_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/order_tracking_top_text"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/order_card_layout"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_tracking_top_text"
        android:orientation="horizontal">
    <com.thonners.kooku.OrderTrackingCard
        android:id="@+id/order_card_1"
        android:layout_width="@dimen/order_status_card_default_radius"
        android:layout_height="@dimen/order_status_card_default_radius"/>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <com.thonners.kooku.OrderTrackingCard
        android:id="@+id/order_card_2"
        android:layout_width="@dimen/order_status_card_default_radius"
        android:layout_height="@dimen/order_status_card_default_radius"/>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <com.thonners.kooku.OrderTrackingCard
        android:id="@+id/order_card_3"
        android:layout_width="@dimen/order_status_card_default_radius"
        android:layout_height="@dimen/order_status_card_default_radius"/>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <com.thonners.kooku.OrderTrackingCard
        android:id="@+id/order_card_4"
        android:layout_width="@dimen/order_status_card_default_radius"
        android:layout_height="@dimen/order_status_card_default_radius"/>
    </LinearLayout>

    <TextView
        android:id="@+id/order_tracking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_card_layout"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>

    <android.support.v7.widget.CardView
        android:id="@+id/order_tracking_footer_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_button_height"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/footer_button_elevation"
        app:cardBackgroundColor="@color/colorPrimary"
        android:visibility="gone"
        android:onClick="rateFoodClicked"
        app:cardCornerRadius="0dp">
        <TextView
            android:id="@+id/order_tracking_footer_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/order_tracking_rate"
            android:textSize="@dimen/footer_button_text_size"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
