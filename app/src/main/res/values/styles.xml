<resources>

    <!-- Text View Styles. -->
    <style name="results_text_view_primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="results_text_view_secondary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="chef_name_title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="chef_bio_text_view">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">@dimen/chef_bio_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="chef_bio_prompt_text_view">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/card_primary_text_padding</item>
        <item name="android:textSize">@dimen/chef_bio_prompt_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="menu_divider_text_view">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/menu_divider_text_size</item>
    </style>

    <style name="item_info_text_view">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/chef_bio_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="item_info_price">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/chef_bio_text_size</item>
    </style>

    <style name="basket_item_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_primary_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/card_primary_text_padding</item>
    </style>

    <style name="address_viewer_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/card_secondary_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/card_primary_text_padding</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <!-- Footer Button Styles -->
    <style name="footer_button" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/footer_button_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">@dimen/footer_button_elevation</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="footer_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/footer_button_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/footer_button_text_size</item>
    </style>

    <!-- Card Styles -->
    <style name="default_card_item">
        <item name="android:layout_height">@dimen/card_height_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="default_card_item_wrap_height">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Dialog Styles -->
    <style name="dialog_quick_add">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/dialog_prompt_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>

    </style>


    <!-- Auto added stuff -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
